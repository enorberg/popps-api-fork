<%= render "shared/navbar" %>

<div class="banner hp-image" id="top">
  <div class="tagline">
    <h1>Precise Play</h1>
    <p>Progress... Proven.</p>
  </div>
</div>

<%= render 'shared/flashes' %>

<div id="about" class="section">
  <h2>About</h2>
</div>

<div id="baseball" class="section">
  <h2>Baseball</h2>
</div>

<div id="contact" class="section">
  <h2>Contact</h2>

  <br>

  <div class="container">
    <div class="inquiry-form">
      <%= simple_form_for @inquiry do |f| %>
        <h4><%= f.input :name, required: true, placeholder: 'John Doe', class: "form-control is-invalid" %></h4>
        <div  class="inquiry-error" id="name-error"></div>
        <br>
        <h4><%= f.input :phone_number, required: true, placeholder: '816-555-5555' %></h4>
        <div  class="inquiry-error" id="phone-error"></div>
        <br>
        <h4><%= f.input :email, required: true, placeholder: 'your.email@example.com' %></h4>
        <div  class="inquiry-error" id="email-error"></div>
        <br>
        <h4><%= f.input :organization, placeholder: 'Are you with a team or academy?' %></h4>
        <br>
        <%= f.button :submit, "Submit Inquiry", class: "btn btn-flat", id: 'submit-inquiry' %>
      <% end %>
    </div>
    <br>
    <ul class="social">
      <h1><li><i class="fab fa-facebook-square"></i></li></h1>
      <h1><li><i class="fab fa-twitter-square"></i></li></h1>
      <h1><li><i class="fab fa-instagram"></i></li></h1>
    </ul>
  </div>
</div>
